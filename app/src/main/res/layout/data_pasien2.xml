<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INPUT DATA PASIEN BARU"
                android:textSize="22dp"
                android:textColor="@color/md_purple_700"
                android:textStyle="bold"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/md_purple_700"
                android:orientation="vertical">

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_datapasien_kode2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/md_white"
                        android:textColorHint="@color/md_white"
                        app:errorTextAppearance="@style/error_appearance"
                        app:hintTextAppearance="@style/label_text">

                        <EditText
                            android:id="@+id/eDataPasienKode2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Kode Pasien"
                            android:enabled="false"
                            android:inputType="textCapWords"
                            android:textColor="@color/md_white"
                            android:textColorHint="@color/md_white"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_datapasien_nama2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/md_white"
                        android:textColorHint="@color/md_white"
                        app:errorTextAppearance="@style/error_appearance"
                        app:hintTextAppearance="@style/label_text">

                        <EditText
                            android:id="@+id/eDataPasienNama2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nama Lengkap Pasien"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:nextFocusForward="@+id/eDataPasienAlamat2"
                            android:ems="10"
                            android:textColor="@color/md_white"
                            android:textColorHint="@color/md_white">
                            <requestFocus />

                        </EditText>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_datapasien_alamat2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/md_white"
                        android:textColorHint="@color/md_white"
                        app:errorTextAppearance="@style/error_appearance"
                        app:hintTextAppearance="@style/label_text">

                        <EditText
                            android:id="@+id/eDataPasienAlamat2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Alamat sesuai KTP"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:nextFocusForward="@+id/eDataPasienTelp2"
                            android:ems="10"
                            android:textColor="@color/md_white"
                            android:textColorHint="@color/md_white"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_datapasien_telp2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/md_white"
                        android:textColorHint="@color/md_white"
                        app:errorTextAppearance="@style/error_appearance"
                        app:hintTextAppearance="@style/label_text">

                        <EditText
                            android:id="@+id/eDataPasienTelp2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="No Telp/HP"
                            android:inputType="phone"
                            android:imeOptions="actionDone"
                            android:ems="10"
                            android:textColor="@color/md_white"
                            android:textColorHint="@color/md_white"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/eDataPasienTgl2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tanggal Lahir"
                        android:clickable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/md_white"
                        android:textColorHint="@color/md_white"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_action_calendar_day"
                        android:layout_marginLeft="-40dp"
                        android:layout_marginTop="2dp"
                        android:id="@+id/img_datapasien_kalendar2"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenis Kelamin : "
                        android:textColor="@color/md_white"
                        android:textColorHint="@color/md_white"
                        android:textSize="18dp"/>

                    <RadioGroup
                        android:id="@+id/rgDataPasienGender2"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:textColor="@color/md_white"
                        android:textColorHint="@color/md_white">

                        <RadioButton
                            android:buttonTint="@color/md_white"
                            android:id="@+id/rbDataPasienLaki2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Laki-laki"
                            android:textColor="@color/md_white"
                            android:textColorHint="@color/md_white"
                            android:layout_marginRight="20dp"
                            android:textSize="16dp"/>

                        <RadioButton
                            android:buttonTint="@color/md_white"
                            android:id="@+id/rbDataPasienWanita2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perempuan"
                            android:textColor="@color/md_white"
                            android:textColorHint="@color/md_white"
                            android:textSize="16dp"/>

                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:background="@color/md_grey_300"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnDataPasienSave2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/slctpurplebutton"
                        android:text="simpan"
                        android:textColor="@color/md_white"
                        android:textSize="18dp"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/btnDataPasienSaveLanjut2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/slctpurplebutton"
                        android:text="simpan lanjutkan"
                        android:textColor="@color/md_white"
                        android:textSize="18dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>