<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1new">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/gradient_color"
        android:layout_height="@dimen/actionbar_dimen">

        <ImageView
            android:layout_width="@dimen/actionbar_dimen"
            android:layout_height="@dimen/actionbar_dimen"
            android:scaleType="centerInside"
            android:id="@+id/imgKesimpulanBack"
            android:src="@mipmap/ic_action_arrow_left" />

        <TextView
            style="@style/text_large_bold"
            android:layout_gravity="center_vertical"
            android:textColor="@color/White_Snow"
            android:id="@+id/txtJudulKesimpulan"
            android:text="Kesimpulan" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/linHeader">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:background="@drawable/empat"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/gradient_color">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="Data Pasien"
                        android:textColor="@color/md_grey_50"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/imgExpandPasien2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="-45dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/collapse"
                        android:clickable="true"
                        android:onClick="expcol_pasien" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/border" />

                <LinearLayout
                    android:id="@+id/linDataPasien2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputlayout_kesimpulankode2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <EditText
                                android:id="@+id/eKesimpulanKode2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:hint="Kode Pasien"
                                android:textColor="@color/md_black"/>

                        </android.support.design.widget.TextInputLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputlayout_kesimpulan_nama2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/eKesimpulanNama2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:hint="Nama Lengkap Pasien"
                                android:textColor="@color/md_black"/>

                        </android.support.design.widget.TextInputLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputlayout_kesimpulan_alamat2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/eKesimpulanAlamat2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:hint="Alamat Sesuai KTP"
                                android:textColor="@color/md_black"/>

                        </android.support.design.widget.TextInputLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputlayout_kesimpulan_telp2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/eKesimpulanTelp2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:hint="Telp/HP"
                                android:textColor="@color/md_black"/>

                        </android.support.design.widget.TextInputLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputlayout_kesimpulan_birthday2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/eKesimpulanBirthday2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:hint="Tanggal Lahir"
                                android:textColor="@color/md_black"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputlayout_kesimpulan_kelamin2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/eKesimpulanKelamin2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:hint="Jenis Kelamin"
                                android:textColor="@color/md_black"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/gradient_color">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="Pemeriksaan"
                        android:textColor="@color/md_grey_50"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/imgExpandDiagnosa2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="-45dp"
                        android:background="@drawable/collapse"
                        android:clickable="true"
                        android:onClick="expcol_diagnosa" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/border" />

                <LinearLayout
                    android:id="@+id/linDataDiagnosa2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputlayout_kesimpulan_keluhan2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/eKesimpulanKeluhan2"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:enabled="false"
                                android:gravity="top"
                                android:hint="Keluhan"
                                android:textColor="@color/md_black"
                                android:inputType="textCapWords|textMultiLine" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2.0">

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1.0"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="160dp"
                                android:layout_height="90dp"
                                android:background="@drawable/mata_new"/>

                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/cardcycledefault"
                                android:gravity="center"
                                android:text="MATA"
                                android:textColor="@color/md_white"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <CheckBox
                                    android:id="@+id/ckKesimMtKn"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:text="Kanan"
                                    android:layout_weight="1.0"
                                    android:gravity="center"
                                    android:enabled="false"
                                    android:buttonTint="@color/md_black"
                                    android:textColor="@color/md_black"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1.0"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="160dp"
                                android:layout_height="90dp"
                                android:background="@drawable/mata_new"/>

                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/cardcycledefault"
                                android:gravity="center"
                                android:text="MATA"
                                android:textColor="@color/md_white"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <CheckBox
                                    android:id="@+id/ckKesimMtKr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kiri"
                                    android:textSize="12dp"
                                    android:layout_weight="1.0"
                                    android:gravity="center"
                                    android:enabled="false"
                                    android:buttonTint="@color/md_black"
                                    android:textColor="@color/md_black"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputlayout_kesimpulan_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/eKesimpulanText2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:hint="Kesimpulan"
                            android:inputType="textCapSentences|textMultiLine"
                            android:textColor="@color/md_black" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputlayout_diagnosa_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/eDiagnosaText2"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="top"
                            android:hint="Diagnosa"
                            android:inputType="textCapSentences|textMultiLine"
                            android:textColor="@color/md_black"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputlayout_saran_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/eSaranText2"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="top"
                            android:hint="Saran"
                            android:inputType="textCapSentences|textMultiLine"
                            android:textColor="@color/md_black"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnKesimpulanSave2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/slctdefaultbutton"
                        android:text="selesai"
                        android:textColor="@color/md_grey_50"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>