<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/MarginLayout"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_view_pasien_nama2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_purple_700"
                    android:text="Small Text"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_view_pasien_kode2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:textSize="15dp"
                    android:textColor="@color/md_purple_700"/>

                <TextView
                    android:id="@+id/txt_view_pasien_alamat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_purple_700"
                    android:text="Small Text"
                    android:textSize="15dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txt_view_pasien_telp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_purple_700"
                    android:text="Small Text"
                    android:textSize="15dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txt_view_pasien_tgl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_purple_700"
                    android:text="Small Text"
                    android:textSize="15dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txt_view_pasien_gender2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_purple_700"
                    android:text="Small Text"
                    android:textSize="15dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="-80dp">

                <ImageView
                    android:id="@+id/imgPilihListPasien"
                    android:background="@drawable/img_button_proses"
                    android:layout_width="70dp"
                    android:layout_height="30dp" />

            </LinearLayout>-->

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
